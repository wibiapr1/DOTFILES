for_window [app_id="info.febvre.Komikku"] move container to workspace number 7; workspace 7, focus
for_window [app_id="com.github.hugolabe.Wike"] move container to workspace number 7; workspace 7, focus

# Assign clients to workspace 8
for_window [class="Spotify"] move container to workspace number 8; workspace 8, focus

# Assign clients to workspace 9
