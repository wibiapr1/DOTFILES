# Automatically putting clients on specific workspaces:
#
# Assign clients to workspace 2
for_window [class="Brave-browser"] move container to workspace number 2; workspace 2, focus

# Assign clients to workspace 3
for_window [app_id="thunar"] move container to workspace number 3; workspace 3, focus

# Assign clients to workspace 4
for_window [class="steam"] move container to workspace number 4; workspace 4, focus

# Assign clients to workspace 5
for_window [app_id="lutris"] move container to workspace number 5; workspace 5, focus
for_window [app_id="net.lutris.Lutris"] move container to workspace number 5; workspace 5, focus
for_window [class="heroic"] move container to workspace number 5; workspace 5, focus

# Assign clients to workspace 6
for_window [class="vlc"] move container to workspace number 6; workspace 6, focus

# Assign clients to workspace 7
for_window [app_id="org.pwmt.zathura"] move container to workspace number 7; workspace 7, focus
